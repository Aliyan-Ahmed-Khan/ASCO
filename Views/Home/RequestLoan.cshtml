
@model ASCO.Models.LoanRequestViewModel

@{
    ViewBag.Title = "RequestLoan";
}

<h2>Request for Loan</h2>


@using (Html.BeginForm("RequestLoan", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div style="margin-top:25px; margin-bottom: 25px;" class="form-group">
        @Html.LabelFor(model => model.farmer_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.farmer_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.farmer_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label style="margin-top:8px; margin-bottom:8px;">Select Loan Amount:</label><br />
        <input style="margin-top: 8px; margin-bottom: 6px;" type="radio" name="SelectedLoanAmount" id="LoanAmount10000" value="10000" /> 10,000 Rs<br />
        <input style="margin-top: 6px; margin-bottom: 6px;" type="radio" name="SelectedLoanAmount" id="LoanAmount15000" value="15000" /> 15,000 Rs<br />
        <input style="margin-top: 6px; margin-bottom: 15px;" type="radio" name="SelectedLoanAmount" id="LoanAmount20000" value="20000" /> 20,000 Rs<br />
    </div>

    <button style="margin-top:15px;" type="submit" class="btn btn-secondary">Submit</button>
}

<div style="margin-top: 30px;">
    @Html.ActionLink("Back to Main Page", "UserPage", null, new { @class = "btn btn-primary" })
</div>

@if (TempData["Message"] != null)
{
    <script>
        alert("@TempData["Message"]");
    </script>
}
<style>

    .btn-secondary {
        background-color: #0b790a;
    }

    .btn-secondary:hover {
        background-color: #095d09;
    }

</style>