
@{
    ViewBag.Title = "RequestLoan";
}

<h2>RequestLoan</h2>


@using (Html.BeginForm("RequestLoan", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="farmer_id">Farmer ID:</label>
        <input type="number" name="farmer_id" id="farmer_id" class="form-control" />
    </div>

    <div class="form-group">
        <label>Select Loan Amount:</label><br />
        <input type="radio" name="SelectedLoanAmount" id="LoanAmount10000" value="10000" /> $10,000<br />
        <input type="radio" name="SelectedLoanAmount" id="LoanAmount15000" value="15000" /> $15,000<br />
        <input type="radio" name="SelectedLoanAmount" id="LoanAmount20000" value="20000" /> $20,000<br />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

