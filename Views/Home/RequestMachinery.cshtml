
@model ASCO.Models.MachineryRequestViewModel

@{
    ViewBag.Title = "RequestMachinery";
}

<h2>RequestMachinery</h2>

@using (Html.BeginForm("RequestMachinery", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.farmer_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.farmer_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.farmer_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label style="margin-top:6px; margin-bottom:6px;">Select Machinery:</label><br />
        <input style="margin-top: 3px; margin-bottom: 3px;" type="radio" name="SelectedMachineryType" id="MachineryTypeTractor" value="Tractor" /> Tractor<br />
        <input style="margin-top: 3px; margin-bottom: 3px;" type="radio" name="SelectedMachineryType" id="MachineryTypeWagon" value="Wagon" /> Wagon<br />
        <input style="margin-top: 3px; margin-bottom: 3px;" type="radio" name="SelectedMachineryType" id="MachineryTypeCultivator" value="Cultivator" /> Cultivator<br />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

<div style="margin-top: 20px;">
    @Html.ActionLink("Back to Main Page", "UserPage", null, new { @class = "btn btn-primary" })
</div>


@if (TempData["Message"] != null)
{
    <script>
        alert("@TempData["Message"]");
    </script>
}
