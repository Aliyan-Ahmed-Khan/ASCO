@model IEnumerable<ASCO.Models.Seed>

@{
    ViewBag.Title = "ListSeeds";
}

<h2 style="margin-top: 10px;">List of Seeds</h2>

<style>
    .table-hover tbody tr:hover {
        background-color: #b8dfe8;
    }
    .btn-custom {
        background-color: #20b01e;
    }

        .btn-custom:hover {
            background-color: #27ce25;
        }
</style>
<p style="margin-top: 20px;">
    @Html.ActionLink("Add New", "ListSeedsCreate", null, new { @class = "btn btn-custom" })
</p>
<table class="table table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.seed_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.seed_company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.seed_quality)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.seed_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seed_company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seed_quality)
            </td>
            <td>
                @Html.ActionLink("Edit", "ListSeedsEdit", new { id = item.seed_id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "ListSeedsDelete", new { id = item.seed_id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Main Page", "AdminPage", null, new { @class = "btn btn-primary" })
</div>

@if (TempData["Message"] != null)
{
    <script>
        alert("@TempData["Message"]");
    </script>
}